#!/bin/sh

tw () {
	channel="$1"
	case "$2" in
		1) quality=720p60 ;;
		2) quality=480p   ;;
		*) quality=best   ;;
	esac
	streamlink "https://twitch.tv/$channel" "$quality" & disown
}
