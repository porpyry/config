#
# wm independent hotkeys
#

# poweroff
super + ctrl + shift + q
	poweroff

# reboot
super + ctrl + shift + r
	reboot

# terminal emulator
super + {Return,@space}
	{_,bspc rule -a \* -o state=floating &&} alacritty

# program launcher
super + q
	dmenu_run

# background image
super + b
	feh --bg-fill --randomize ~/.wallpapers/*

# browser
super + n
	brave --use-gl=desktop --enable-features=VaapiVideoDecoder --disable-features=UseChromeOSDirectVideoDecoder

# browser (incognito)
super + shift + n
	brave --incognito

# editor
super + e
	emacsclient -c -a ''

# file manager
super + shift + e
	pcmanfm

# Volume
XF86Audio{Mute,LowerVolume,RaiseVolume}
	changevolume {mute,down,up}

# brightness
XF86MonBrightness{Down,Up}
	xbacklight -{dec,inc} 5

# monitor off
XF86Sleep
	xset dpms force off

# alert
super + {d,c,v}
	{date,time,battery}alert

# wireless
super + F11
	bspc rule -a \* -o state=floating && alacritty -e nmtui-connect

# screenshot
Print
	flameshot gui

#
# bspwm hotkeys
#

# quit bspwm
super + ctrl + shift + e
	bspc quit

# restart bspwm & reload sxhkd
super + Escape
	bspc wm -r; \
	pkill -USR1 -x sxhkd

# close / kill
super + {_,ctrl + shift +}w
	bspc node -{c,k}

# close brother
super + shift + w
	bspc node @brother -c

# monocle
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,y,g,f}
	bspc node -t {\~tiled,\~pseudo_tiled,\~floating,\~fullscreen}

super + shift + f
	bspc node @brother -t \~fullscreen

# pin
super + p
	bspc node -g sticky

#
# focus/swap
#

# focus direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus cycle
super + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# focus last node
super + ctrl + Tab
	bspc node -f last

# focus brother/parent
super + {_,ctrl + }a
	bspc node -f @{brother,parent}

# swap brother
super + grave
	bspc node -s @brother

# move to uncle
super + shift + a
	bspc node -n @parent/brother

# rotate
super + {_,ctrl + ,shift + }r
	bspc node @parent -R {90,180,270}

#
# desktop
#

# focus or send to the given desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'; desktopalert

super + shift + {1-9,0}
	bspc node -d '^{1-9,0}'

super + {z,x,s}
	bspc desktop -f {prev,next,last}; desktopalert

super + shift + {z,x,s}
	bspc node -d {prev,next,last} --follow; desktopalert

#
# preselect
#

# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused desktop
super + alt + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# resize right/bottom
super + ctrl + {h,j,k,l}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

super + ctrl + KP_{Left,Down,Up,Right}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

# resize left/top
super + ctrl + shift + {h,j,k,l}
	bspc node -z {left -20 0,top 0 20,top 0 -20,left 20 0}

super + ctrl + shift + KP_{Left,Down,Up,Right}
	bspc node -z {left -20 0,top 0 20,top 0 -20,left 20 0}

# floating window
super + KP_{Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# balance/equailize
super + {ctrl,shift} + b
	bspc node @/ -{E,B}
