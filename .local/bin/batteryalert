#!/bin/sh
charging="$(acpi -b | grep 'Battery 0' | cut -d ',' -f 1 | cut -d ' ' -f 3)"
battery="$(acpi -b | grep 'Battery 0' | cut -d ',' -f 2 | cut -d ' ' -f 2)"
if [ "$charging" = "Unknown" ]; then
    charging="Charging"
fi
dunstify -a batteryalert -u low -t 1500 -r 9999 -h int:value:"$battery" "$charging: $battery"
